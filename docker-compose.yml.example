version: "2"
services:
  watchtower:
    image: centurylink/watchtower
    container_name: watchtower
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock"
    restart: always
  mongo:
    image: mongo
    container_name: mongo
    volumes:
      - "./mongo:/data/db"
    command: "--smallfiles --logpath=/dev/null"
    restart: always
  grimoire:
    image: bemacized/grimoire
    container_name: grimoire
    restart: always
    links:
      - mongo
    environment:
